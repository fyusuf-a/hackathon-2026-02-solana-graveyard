################################################################
# Create 2 NFTs for testing the auction contract
################################################################

addon "svm" {
    rpc_api_url = input.rpc_api_url
    network_id = input.network_id
}

action "create_nfts" "ts::exec" {
    description = "Create 2 NFTs on localnet"
    cwd = "./"
    script = <<-EOF
        yarn ts-node --project scripts/tsconfig.json scripts/create-nfts.ts
    EOF
}
